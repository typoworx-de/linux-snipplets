#!/bin/bash

buildNode=$(hostname | tr '[[:upper:]]' '[[:lower:]]')'-builder';
#network='php-stack.local';
network='host'

instance=$(docker buildx create \
  --node "${buildNode:-default}" \
  --driver docker-container \
  --driver-opt network="${network:-host}" \
  --config /etc/buildkit/buildkitd.toml)

docker buildx inspect --bootstrap
docker buildx use "${instance:-default}"

exit $?
